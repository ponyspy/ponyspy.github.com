@font-face {
	font-family: 'Georgia';
	src: url('../fonts/Georgia.ttf');
}

@font-face {
	font-family: 'GillSans';
	src: url('../fonts/GillSansC.otf');
}

@font-face {
	font-family: 'GillSans Light';
	src: url('../fonts/GillSansLightC.otf');
}

.search_input::-webkit-input-placeholder {
	color: white;
}

body
	margin 0
	padding 0
	font 14pt/18pt 'Georgia'

.menu_block
	position fixed
	top 0
	z-index 99999
	padding-top 10px
	padding-bottom 5px
	background-color rgba(13, 13, 13, 0.8)
	color white
	width 100%
	.menu_inner
		max-width 1200px
		padding-left 40px
		padding-right 40px
		margin 0 auto
	.logo
		font 24pt/26pt 'Georgia'
		cursor pointer
		float left
		transition color .2s ease-in-out
		&:hover
			transition color .2s ease-in-out
			color #c33825
		&.hide
			display none
	.menu_search
		display block
		float left
		display none
		&.active
			display block
		.search_input
			font 24pt/26pt 'Georgia'
			margin 0
			padding 0
			border none
			outline none
			color white
			background transparent
			min-width 100px
			max-width 210px
	.menu_right
		float right
		margin-top 4px
		a
			margin-left 10px
			img
				height 30px
	.menu_lectures
		padding-top 5px
		clear both
		display none
		padding-bottom 5px
		&.active
			display block



.item_lectures
	max-width 1200px
	overflow hidden
	height 265px
	.lectures_outer
		max-width 1200px
		overflow hidden
		height 250px
		padding-bottom 20px
		-webkit-overflow-scrolling: touch;
		.lectures_inner
			white-space nowrap
			vertical-align top
			display inline-block
			font-size 0
			.lecture
				vertical-align top
				font-size 0
				display inline-block
				width 200px
				height 250px
				margin-right 70px
				text-decoration none
				.lecture_numb
					background-color grey
					overflow hidden
					width 200px
					height 200px
					font 264pt/126pt 'Georgia'
					color black
					.numb_inner
						margin-left -22px
				.lecture_title
					color #939598
					white-space normal
					margin-top 10px
					font 20pt/22pt 'GillSans Light'
					transition color .2s ease-in-out
				&:hover .lecture_title
					transition color .2s ease-in-out
					color #c33825
				&:last-child
					margin-right 0px