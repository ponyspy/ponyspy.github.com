body
	margin 0
	padding 0

html, body, .content_block, .column, .column_inner
	height 100%

.column
	&.left
		width 93px
		position fixed
		z-index 9999
		.logo
			position absolute
		.adress
			bottom 0
			position absolute
		.logos
			position absolute
			top 363px
			width 100px
	&.right
		right 0
		left 93px
		position absolute
		z-index 0
		overflow hidden
		.column_inner
			overflow scroll
			margin-right -15px
			.item
				padding-top 5px
				width 100%
				min-height 400px
				position relative
				.poster
					display block
					margin-left 7px