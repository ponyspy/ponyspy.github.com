.content_block
	.content_photo
		top 0
		position fixed
		width 100%
		overflow hidden
		.photo_inner
			z-index 0
			cursor pointer
			position relative
			max-width 1200px
			height 600px
			margin 0 auto
			background-image url('../img/iam.jpg')
			background-position top
			background-size cover
			background-repeat no-repeat
	.content_body
		max-width 1200px
		padding-left 40px
		padding-right 40px
		margin 0 auto
		position relative
		top 600px
		background-color white
		.content_item
			min-height 200px
			padding-top 40px
			.item_title
				font 24pt/26pt 'Georgia'
				margin-bottom 40px
				.desc_sep
					color grey
				.desc_select
					color grey
					cursor pointer
					transition color .2s ease-in-out
					&.active
					&:hover
						transition color .2s ease-in-out
						color #c33825
			.item_desc
				display none
				-webkit-hyphens: auto;
				p, ul
					max-width 1024px
				&.active
					display block
				img
					margin-top 50px
					margin-bottom 50px
					width 100%
			.item_others
				max-width 1024px
				.other
					font-size 14pt
					min-height 160px
					background-color grey
					margin-bottom 30px

.books_separator
	font 16pt/18pt 'Georgia'
	margin-bottom 20px
	margin-top 20px

.book_item
	-webkit-hyphens: none;
	margin-bottom 10px
	display block
	color black
	text-decoration none
	transition color .2s ease-in-out
	&:hover
		transition color .2s ease-in-out
		color #c33825
	.book_pref
		margin-right 10px
	.book_name
		font 14pt/22pt 'Georgia'
		margin-right 5px
	.book_post
		font-style italic
		display inline-block