@media (max-width: 1000px) {
	.menu_s_block .arrow {
		display block!important
	}
	.menu_s_block .title {
		display none!important
	}
	.left {
		margin-left 0!important
	}
	.right {
		margin-right 0!important
	}
}

body
	margin 0
	padding 0
	font 14pt/16pt 'Helvetica'

a
	color black
	text-decoration none
	&:hover
		color grey

.maket_block
	padding 20px
	position relative

.menu_block
	overflow hidden
	padding-bottom 5px
	.logo
		float left
		display block
		text-decoration none
	.menu_right
		float right
		a
			margin-left 10px

.menu_s_block
	padding-top 5px
	position relative
	border-top 1px solid black
	overflow hidden
	.item
		display inline-block
		position relative
		z-index 1
		.arrow
			display none
		&:hover
			color grey
			cursor pointer
		&.center
			z-index 0
			text-align center
			position absolute
			left 0
			right 0
		&.left
			float left
			margin-left -15%
			transition .3s ease
			&:hover
				transition .3s ease
				margin-left 0
		&.right
			float right
			margin-right -15%
			transition .3s ease
			&:hover
				transition .3s ease
				margin-right 0

.content_block
	column-count 3
	column-width 400px
	column-gap 40px
	padding-top 40px
	p
		margin-top 0
		break-inside avoid
	img
		margin-bottom 12px
		break-inside avoid
		width 100%
	.stats_block
		display table
		width 100%
		font 12pt/14pt 'Helvetica'
		padding-bottom 20px
		margin-bottom 20px
		border-bottom 1px solid black
		.item
			display table-row
			.title
			.value
				display table-cell
				padding-bottom 6px
			.title
				&:after
					content ':'
			.value
				padding-left 40px

.footer_block
	border-top 1px solid black
	margin-top 20px
	padding-top 20px
	overflow hidden
	font 12pt/14pt 'Helvetica'
	.title
		float left
		display inline-block
		margin-right 40px
	.item
		width 240px
		float left
		display inline-block