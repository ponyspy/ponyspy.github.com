	body
		.up_block: .up_inner
			.menu_block
				a.logo(href='#main') Color Finale
				a(href='#download') Download
				a(href='#buy') Buy
				a(href='#support') Support
				a(href='#about') About
			.locale_block
				a.active(href='#') en
				a(href='#') de
				a(href='#') fr
			.drop_block
