doctype html
html
	head
		title Color Finale - Best Color Grading Tool for Everyone
		meta(charset='utf-8')
		meta(name='viewport', content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no')
		link(rel='stylesheet', type='text/css', href='css/main.css')
		script(type='text/javascript', src='js/jquery-3.3.1.min.js')
		script(type='text/javascript', src='js/main.js')
	body
		.up_block: .up_inner
			.menu_block
				a.logo(href='#main') Color Finale
				a(href='#download') Download
				a(href='#buy') Buy
				a(href='#support') Support
				a(href='#about') About
			.locale_block
				a.active(href='#') en
				a(href='#') de
				a(href='#') fr
			.drop_block
				.drop#main
					br
					.d_link
						a(href='#') One Title
						span= ' - Description for one title'
					.d_link
						a(href='#') Super Long Title
						span= ' - Description for Super Long Title'
					.d_link
						a(href='#') Short Title
						span= ' - Description for short title'
					.d_link
						a(href='#') No Title
						span= ' - Description for No Title'
					.d_link
						a(href='#') Middle Title
						span= ' - Description for Middle Title'
					.d_link
						a(href='#') Zero Title
						span= ' - Description for Middle Title'
				.drop#download
					p 7 days free trial download:
					.d_link
						a(href='#') Release
						span= ' - 22.5Mb'
					.d_link
						a(href='#') Beta
						span= ' - 24.6Mb'
				.drop#buy
					p Select your paid plan:
					.d_section
						.d_title License
						.d_content
							.d_link
								a(href='#') Color Finale Basic
								span= ' - $99.99'
							.d_link
								a(href='#') Color Finale Pro
								span= ' - $149.99'
					.d_section
						.d_title Bundles
						.d_content
							.d_link
								a(href='#') Color Finale Pro + Ascend Presets
								span= ' - $199.99'
							.d_link
								a(href='#') Color Finale Pro + Film Grain
								span= ' - $199.99'
							.d_link
								a(href='#') Color Finale Pro + All Presets
								span= ' - $249.99'
					.d_section
						.d_title Presets
						.d_content
							.d_link
								a(href='#') Ascend Presets
								span= ' - $24.99'
							.d_link
								a(href='#') Film Grain
								span= ' - $24.99'
							.d_link
								a(href='#') All Presets
								span= ' - $49.99'
					.d_section
						.d_title Upgrades
						.d_content
							.d_link
								a(href='#') Basic to Pro
								span= ' - $49.99'
				.drop#support
					p Check this, before ask the questions:
					.d_link
						a(href='#') License Manager
						span= ' - Check or retrive your license'
					.d_link
						a(href='#') FAQ
						span= ' - Common Questions'
					.d_link
						a(href='#') Guides
						span= ' - Complete Color Grading Guides'
					br
					p
						span= 'If you still have questions? Email us: '
						a(href='mailto:support@colorfinale.com') support@colorfinale.com

				.drop#about
					p About us:
					p Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua.
					p Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat.
					p Duis aute irure dolor in reprehenderit in voluptate velit esse cillum dolore eu fugiat nulla pariatur. Excepteur sint occaecat cupidatat non proident, sunt in culpa qui officia deserunt mollit anim id est laborum.

		.main_block
			- var items = ['One Title', 'Super Long Title', 'Short Title', 'No Title', 'Middle Title', 'Zero Title']

			.content_line

			.content_items
				each item, i in items
					.content_item(style='background-image: url(img/' + (i+1) + '.jpg)')

			.content_mask
				each item, i in items
					.mask_item(data-title=item)


		.down_block: .down_inner
			.title_block Content Title
			.copy_block!= '&copy; ColorTrix ' + new Date().getFullYear()