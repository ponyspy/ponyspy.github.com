								a(href='#') Color Finale Pro
								span= ' - $149.99'
					.d_section
						.d_title Bundles
						.d_content
							.d_link
								a(href='#') Color Finale Pro + Ascend Presets
								span= ' - $199.99'
							.d_link
								a(href='#') Color Finale Pro + Film Grain
								span= ' - $199.99'
							.d_link
								a(href='#') Color Finale Pro + All Presets
								span= ' - $249.99'
					.d_section
						.d_title Presets
						.d_content
							.d_link
								a(href='#') Ascend Presets
								span= ' - $24.99'
							.d_link
								a(href='#') Film Grain
								span= ' - $24.99'
							.d_link
								a(href='#') All Presets
								span= ' - $49.99'
					.d_section
						.d_title Upgrades
						.d_content
							.d_link
								a(href='#') Basic to Pro
								span= ' - $49.99'
				.drop#support
					br
					.d_link
						a(href='#') License Manager
						span= ' - Check or retrive your license'
					.d_link
						a(href='#') FAQ
						span= ' - Common questions'
					.d_link
						a(href='#') Manual
						span= ' - Complete Color Finale guide book'
					br
					p
						span= 'If you still have questions? Email us: '
						a(href='mailto:support@colorfinale.com') support@colorfinale.com

