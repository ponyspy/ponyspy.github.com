html, body, .content_block, .columns_block
	height 100%

p
	margin 0
	padding 0
	margin-bottom 40px

.column.left::-webkit-scrollbar {
	display: none;
}

.title_block
	width 50%


.columns_block
	overflow hidden
	.column
		float left
		width 50%
		height 100%
		overflow scroll
		&.left
			.column_content
				box-sizing border-box
				padding-left 20px
				padding-right 20px
		&.right
			img
				width 100%
				display block
				margin-bottom 40px


.column_content
	font-family 'Helvetica Neue'
	font-size 12pt
	line-height 18pt
	font-weight bold
	margin-top 140px
	.one
		column-count 1
	.two
		column-count 2
	.three
		column-count 3

.column_intro
	width 100%
	height 100%
	position relative
	padding-top 140px
	box-sizing border-box
	background-position center
	background-size cover
	background-repeat no-repeat
	.intro_title
		font-family 'Helvetica Neue'
		font-size 10.5vw
		line-height 10.5vw
		font-weight bold
		padding-left 20px
		padding-right 20px
		box-sizing border-box
	.intro_desc
		width 40%
		position absolute
		bottom 40px
		right 20px
		font-family 'Helvetica Neue'
		font-size 12pt
		line-height 14pt
		font-weight bold
		text-decoration underline