&.heads
	.content-inner
		max-width none
		width 100%
		padding 0
		.head-item
			width 40%
			min-width 440px
			max-width 640px
			padding 40px
			padding-right 60px
			padding-left 60px
			box-sizing border-box
			border-right 5px solid black
			cursor default
			&:first-child
				border-left 5px solid black
			&:after
				content ''
				width 100%
				height 10px
				top 50%
				left 0
				position absolute
				z-index 0
				margin-left -5px
				border-left 5px solid lightgrey
				border-right 5px solid lightgrey
			.head-name
				color white
				font-size 24pt
				display inline-block
				box-sizing border-box
				text-transform uppercase
				max-width 320px
				&:hover span
					cursor default
					background-color white
					color main-color
				span
					display inline-block
					background-color main-color
					padding 2px
					padding-left 10px
					padding-right 10px
					margin-right -5px
					margin-bottom 3px
			.head-status
				margin-top 5px
				color black
				font-size 10pt
				line-height 12pt
				max-width 320px
				text-transform uppercase
				color main-color
			.head-quote
				font-size 14pt
				line-height 18pt
				text-transform uppercase
				position relative
				z-index 1
				&:before
					font-size 62pt
					line-height 62pt
					content '«'
					margin-left -40px
					display block
				&:after
					display block
					font-size 62pt
					line-height 62pt
					content '»'
					position absolute
					left 100%