&.plan
	.content-inner
		height 0
		position relative
		z-index 999
		.content-title
			position absolute
			top 40px
			z-index 99
		.content-preview-image
			display none
			top 40px
			max-width 1280px
			padding-right 380px
			height 580px
			position relative
			background-color black
			box-sizing border-box
			.preview-inner
				width 100%
				height 100%
				position relative
				overflow hidden
				cursor move
				img
					position absolute
			&:hover:after
				content '‑'
				position absolute
				width 40px
				height 40px
				left 10px
				bottom 10px
				border-radius 40px
				background-color main-color
				color white
				font-size 24px
				text-align center
				line-height 40px
			&.active
				display block
		.content-preview-column
			display none
			margin-top 40px
			width 100%
			max-width 380px
			position absolute
			right 40px
			top 0
			// transition .3s ease-out
			&.active
				display block
			&.open
				// transition .3s ease-in
				// max-width 1280px
				position relative
				max-width none
				left 0
				right 0
				.preview-body
					cursor zoom-out
				.preview-title
					font-size 24pt
				.preview-description
					columns 4 320px
					column-gap 3em
					column-rule 5px solid black
					margin-bottom 20px
			.preview-images
				background-color rgba(0, 0, 0, 0.8)
				.preview-image
					max-width 430px
				.swiper-button-prev
				.swiper-button-next
					top auto!important
					bottom 10px!important
					background-image none!important
					width 40px
					height 40px
					border-radius 40px
					background-color main-color
					text-align center
					font-size 20px
					padding-top 9px
					box-sizing border-box
					color white
					cursor default
				.swiper-button-prev:after
					content '❮'
					padding-right 2px
				.swiper-button-next:after
					content '❯'
					padding-left 2px
				.swiper-slide
					width 100%
					height 200px
					background-position center
					background-size cover
					background-repeat no-repeat
					&:hover:after
						content '+'
						position absolute
						width 40px
						height 40px
						right 10px
						top 10px
						border-radius 40px
						background-color main-color
						color white
						font-size 24px
						text-align center
						line-height 36px
			.preview-body
				// cursor ns-resize
				cursor zoom-in
				overflow hidden
				height 380px
				background-color white
				.preview-title
					font-size 16pt
					line-height 18pt
					text-transform uppercase
					padding 10px
					padding-top 20px
					box-sizing border-box
				.preview-description
					padding 10px
					padding-bottom 0
					box-sizing border-box
					p
						margin-bottom 20px