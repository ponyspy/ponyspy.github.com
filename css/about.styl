p
	margin 0
	padding 0

.content_block
	padding 20px
	padding-top 80px
	font-family 'Helvetica Neue'
	font-weight bold
	font-size 12pt
	line-height 18pt

.columns_block
	overflow hidden
	.column
		width 50%
		float left
		box-sizing border-box
		&.left
			padding-right 20px
		&.right
			padding-left 20px

.section_block
	margin-bottom 80px
	.section_title
		margin-bottom 40px
		font-size 26pt
		line-height 28pt
	.section_content
		overflow hidden

	&.team
		margin-bottom 40px
		.section_content
			margin-left -20px
			margin-right -20px
			// background-color grey
		.member_item
			display inline-block
			vertical-align top
			// background-color green
			width 14.285714286%
			margin-right -4px
			padding-left 20px
			padding-right 20px
			box-sizing border-box
			margin-bottom 20px
			&.out
				opacity 0.5
			.project_num
				margin-right 7px
				color black
				text-decoration none
				display inline-block
				&:after
					content ','
				&:last-child:after
					content ''

	&.about
		margin-bottom 60px
		.section_content
			margin-bottom 20px

	&.contacts
		margin-bottom 60px
		.contact_item
			float left
			margin-right 40px
			margin-bottom 20px

	&.geography
		.section_content
			width 100%
			height 500px
			background-color lightgrey
			background-position center

	&.partners
		margin-bottom 0px
		.section_content
			margin-left -10px
			margin-right -10px
		.partner_item
			width 10%
			float left
			padding-right 10px
			padding-left 10px
			box-sizing border-box
			margin-bottom 40px
			.logo
				width 100%
				padding-bottom 75%
				background-color lightgrey