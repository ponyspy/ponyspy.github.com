html, body
	margin 0
	padding 0
	// position relative
	// height 100%
	font 12pt/14pt 'Pragmatica'

.menu_block
	width 100%
	background-color black
	height 55px
	color white
	position fixed
	z-index 99999999
	overflow hidden
	.menu_inner
		max-width 1240px
		margin 0 auto
		padding-left 20px
		padding-right 20px
		.menu
			padding-top 20px
			font 10pt/12pt 'Pragmatica'
			a
				margin-left 20px
				&:hover
					border-bottom 1px dotted white
			&.left
				float left
			&.right
				float right
		a
			text-decoration none
			color white
			display block
			float left
		.logo
			float left
			display inline-block
			&.dep
				margin-top 10px
				margin-left -125px
				img
					height 35px
			&.main
				margin-top 15px
				img
					height 25px

.content_block
	position relative
	top 55px
	background-color lightgrey

.footer_block
	width 100%
	height 80px
	padding-top 20px
	box-sizing border-box
	bottom 0
	z-index 0
	position fixed
	background-color black
	.footer_inner
		max-width 1240px
		margin 0 auto
		padding-left 20px
		padding-right 20px
		a
			color white
			text-decoration none