@keyframes scroll {
	0% {
		transform translate(0, 0)
	}
	100% {
		transform translate(-100%, 0)
	}
}

html, body
	margin 0
	padding 0

.content-block
	max-width 1280px
	margin 40px auto
	position relative

.block
	top 0
	width 50%
	position absolute
	box-sizing border-box
	&.left
		left 0
		padding-right 100px
		padding-left 20px
	&.right
		left 50%
		padding-left 100px
		padding-right 20px
	img
		width 100%
		display block

.marquee
	white-space nowrap
	width 60%
	position absoulte
	overflow hidden
	color black
	margin-bottom 5px
	span
		display inline-block
		padding-left 100%
		animation scroll 10s infinite linear