body
	margin 0

.content_block
	padding 20px
	padding-top 140px

.directions
	text-align justify
	&:after
		content ''
		display inline-block
		width 100%
	.d_item
		a
			text-decoration none
			color black
		display inline-block
		font-family 'Helvetica Neue'
		font-size 10.5vw
		line-height 10.5vw
		font-weight bold
		&:hover a
			text-decoration underline

.projects
	text-align justify
	.p_item
		display inline-block
		font-family 'Helvetica Neue'
		font-weight bold
		font-size 14pt
		line-height 18pt
		a
			text-decoration none
			color black
			&:before
				content '3'
				margin-left 20px
				margin-right 20px
		&:hover
			text-decoration underline
		&.hover a
			color lightgrey