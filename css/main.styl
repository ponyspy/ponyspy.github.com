@font-face {
	font-family: 'ABCFavoritPro-Light';
	src: url('../fonts/ABCFavoritPro-Light-Trial.woff2');
}

@keyframes marquee {
	0% { left: 0; }
	100% { left: -100%; }
}

body
html
	margin 0
	padding 0
	height 100%
	color rgb(238, 56, 49)
	font-family 'ABCFavoritPro-Light'
	font-size 12pt
	line-height 14pt
	-webkit-font-smoothing: antialiased;
	-moz-osx-font-smoothing: grayscale;
	a
		color rgb(238, 56, 49)
	p
		margin 0
		padding 0
		font-size 21pt
		line-height 24pt
		text-indent 80px

.section_item
	-ms-overflow-style none
	scrollbar-width none
	&::-webkit-scrollbar
		display none

.os-scrollbar
	margin 4px!important

.os-scrollbar-handle
	background rgb(238, 56, 49)!important

.outer_block
	display flex
	flex-direction column
	height 100%
	.header_block
		position relative
		display flex
		flex-direction row
		border-bottom 1px solid rgb(238, 56, 49)
		overflow hidden
		padding 20px
		min-height 17px
		.header_inner
			white-space nowrap
			display flex
			min-width 200%
			height 30px
			position absolute
			overflow hidden
			animation marquee 15s linear infinite
			.header_marquee
				display flex
				width 50%
				span:after
					margin-right 140px
					margin-left 140px
					content ''
					display inline-block
					width 12px
					height 12px
					border-radius 100%
					background-color rgb(238, 56, 49)
	.content_block
		display flex
		flex-direction row
		flex-grow 1
		min-height 0
		.main_block
			width 33.3333333333333333333%
			box-sizing border-box
			display flex
			flex-direction column
			border-right 1px solid rgb(238, 56, 49)
			.main_title
				margin-bottom auto
				padding 20px
				img
					display block
					width 100%
			.main_desc
				padding 20px
			.main_footer
				padding 20px
				border-top 1px solid rgb(238, 56, 49)

		.sections_block
			width 50%
			flex-grow 1
			min-height 0
			display flex
			flex-direction column
			justify-content flex-end
			.section_item
				width 100%
				border-top 1px solid rgb(238, 56, 49)
				display flex
				flex-direction row
				&:first-child
					border-top none
				.column
					width 50%
					flex-grow 1
					display flex
					flex-direction column
					min-height 0
					border-right 1px solid rgb(238, 56, 49)
					&:last-child
						border-right none
					&.none
						cursor pointer
						background: linear-gradient(to top left, rgba(238, 56, 49, 0) 0%, rgba(238, 56, 49, 0) calc(50% - 0.8px), rgba(238, 56, 49, 1) 50%, rgba(238, 56, 49, 0) calc(50% + 0.8px), rgba(238, 56, 49, 0) 100%)
					.column_title
						padding 20px
						box-sizing border-box
						display flex
						align-items center
						justify-content space-between
						cursor pointer
						span, a
							margin-right auto
							&.clear
								display none
								margin-right auto
							&.dl
								display none
								margin-right 60px
							&.num
								min-width 20px
								margin-right 60px
						&:after
							content ''
							display inline-block
							width 12px
							height 12px
							border-radius 100%
							background-color rgb(238, 56, 49)
					.column_body
						padding 20px
						box-sizing border-box
						display none
						&.draw
							padding 0
							overflow hidden
							canvas
								cursor crosshair
				&.active
					margin-bottom auto
					flex-grow 1
					min-height 0
					overflow scroll
					.column
						cursor auto
					.column_title
						cursor auto
					.column_body
						display block
						flex-grow 1
						overflow auto
						min-height 0
					a.dl
					a.clear
						display inline!important

