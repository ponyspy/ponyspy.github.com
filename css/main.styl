@media (max-width: 640px) {
	.content-block {
		padding-left 10px!important
		padding-right 10px!important
	}

	.columns-block {
		display none!important
	}

	.logo {
		padding-bottom 0px!important
	}

	.title-block {
		padding-top 20px!important
		display block!important
		margin-bottom 20px!important
	}

	.title-block div {
		text-align: center!important
	}

	.title-block .right {
		margin-top 20px!important
	}

	.swiper-container, .swiper-slide {
		height 320px!important
	}

	.description-block-small {
		display block!important
	}
}

html, body
	margin 0
	padding 0
	font-family 'Helvetica'

.content-block
	max-width 1240px
	margin 40px auto
	overflow hidden
	padding-left 20px
	padding-right 20px
	.logo
		text-align center
		padding-bottom 40px
		font-weight bold
		font-size 16pt
		line-height 18pt
	.columns-block
		columns 3 auto
		column-gap: 2em;
	.title-block
		border-top 1px solid lightgrey
		margin-top 20px
		padding-top 40px
		margin-bottom 40px
		display: flex;
		font-weight bold
		a
			color black
			text-decoration none
			&:hover
				text-decoration underline
		div
			flex-basis 240px
		.center
			flex-grow: 1;
			text-align: center;
			span
				display inline-block
				max-width 240px
		.right
			text-align right
	.description-block
		margin-top 20px
	.description-block-small
		display none
		margin-top 10px
		padding-top 10px
		border-top 1px solid lightgrey
		font-size 10pt
		line-height 12pt

.swiper-container
	width 100%
	height 680px
	.swiper-slide
		width 100%
		height @height
		background-size cover
		background-position top
		background-repeat no-repeat