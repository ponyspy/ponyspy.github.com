@font-face {
  font-family: 'Swiss721Rm';
  src: url('../fonts/Sw721Rm.ttf');
}

@font-face {
  font-family: 'NeueHaas';
  src: url('../fonts/NeueHaasUnica-Black.ttf');
}

@media screen and (max-width: 1200px) {
	.column_item {
		border none!important;
	}
	.column_inner {
		overflow-y: auto!important;
	}
	.swiper-pagination {
		display block!important;
	}
}


html
body
  margin 0
  padding 0


.column_inner::-webkit-scrollbar {
  display: none;
}

.column_inner {
  -ms-overflow-style: none;
  scrollbar-width: none;
}

.swiper-pagination
	display none
	background-color white
	bottom 0!important
	margin 0!important
	padding-top 10px
	padding-bottom 10px
	.swiper-pagination-bullet
		background-color rgb(238, 56, 49)


.header_block
	position fixed
	width 100%
	top 0
	left 0
	z-index 9999999999
	background-color rgb(238, 56, 49)
	border-bottom 2px solid white
	padding 20px
	box-sizing border-box
	.header_columns
		display flex
		.column_item
			width 33.3333333333%
			text-align center
			color white
			font 14pt/18pt 'Swiss721Rm'


.columns_block
	width 100%
	height 100%
	position absolute
	overflow hidden
	.column_item
		height 100%
		background-color rgb(238, 56, 49)
		border-right 2px solid rgb(238, 56, 49)
		&.one .column_header
			font 42pt/44pt 'NeueHaas'!important
		&.two .column_header
			font 24pt/28pt 'Swiss721Rm'!important
		&.three .column_header
			display flex
			font 14pt/16pt 'Swiss721Rm'!important
		.column_inner
			height 100%
			padding-top 60px
			overflow-y scroll
			.column_header
				color white
				height 35vh
				padding 20px
				box-sizing border-box
			.column_body
				padding 20px
				padding-bottom 100px
				box-sizing border-box
				color rgb(238, 56, 49)
				background-color white
				.column_title
					font 14pt/16pt 'Swiss721Rm'
				.column_desc
					padding-top 180px
					font 24pt/28pt 'Swiss721Rm'

