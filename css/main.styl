body
	margin 0

.content_block
	padding 20px
	padding-top 140px

.directions
	text-align justify
	&:after
		content ''
		display inline-block
		width 100%
	.d_item
		a
			text-decoration none
			color black
		display inline-block
		font-family 'Helvetica Neue'
		font-size 10.5vw
		line-height 10.5vw
		font-weight bold
		&.hover a
			color lightgrey
		&:hover a
			text-decoration underline

.projects
	text-align left
	.p_item
		display inline
		font-family 'Helvetica Neue'
		font-weight bold
		font-size 12pt
		line-height 18pt
		a
			text-decoration none
			color black
			margin-left 10px
			&:hover
				border-bottom 2px solid black
			.num
				padding-right 10px
		&.select a
			color grey
		&.hover a
			color lightgrey