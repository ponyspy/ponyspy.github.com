@-webkit-keyframes scroll {
	0% {
		-webkit-transform translate(0, 0)
		transform translate(0, 0)
	}
	100% {
		-webkit-transform translate(-100%, 0)
		transform translate(-100%, 0)
	}
}

html, body
	width 100%
	height 100%
	overflow hidden
	margin 0
	padding 0
	background-color white

.cv
	position absolute
	font-size 14pt
	top 30px
	right 30px
	z-index 9999999999

.block
	position absolute
	top 100px
	left 100px
	cursor default
	// border 1px solid black
	img
		user-select none
		display block
		max-width 600px

.marquee
	white-space nowrap
	width 60%
	position absoulte
	overflow hidden
	color black
	span
		display inline-block
		padding-left 100%
		animation scroll 10s infinite linear