html
body
	margin 0
	padding 0

html, body, .slider_outer, .swiper-container
	height 100%

.slider_outer
	position relative

.swiper-container
	width 100%

.swiper-slide
	position relative
	.slide_image
		width 100%
		padding-bottom 100%
		background-position center
		background-size contain
		background-repeat no-repeat
		position relative
		top 50%
		transform translateY(-50%)
	&.swiper-slide-active
		.player
			display block
	.player
		display none
		padding-left 40px
		padding-right 40px
		box-sizing border-box
		width 100%
		position absolute
		bottom -60px