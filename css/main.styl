@keyframes scroll {
	0% {
		transform translate(0, 0)
	}
	100% {
		transform translate(-100%, 0)
	}
}

@media (max-width: 800px) {
	.block {
		width 100%!important
		display block!important
	}

	.block.right {
		float left!important
	}

	.block img {
		width 100%!important
		max-width none!important
		max-height none!important
	}
}

html, body
	margin 0
	padding 0
	height 100%

.content-block
	overflow hidden
	.block
		margin-top 20px
		display table
		width 1%
		box-sizing border-box
		&.left
			float left
			padding-left 20px
			padding-right 20px
		&.right
			padding-left 20px
			padding-right 20px
			float right
		.image
			height auto
			overflow hidden
			img
				max-width 600px
				max-height 600px
				display block
		.marquee
			white-space nowrap
			max-width 600px
			// height auto
			// position absoulte
			overflow hidden
			margin-top 5px
			margin-bottom 5px
			span
				width 100%
				position relative
				display inline-block
				padding-left 100%
				animation scroll 10s infinite linear

.footer-block
	width 100%
	position fixed
	bottom 20px
	overflow hidden
	.left
		float left
		margin-left 20px
		.counter
			cursor default
	.right
		float right
		margin-right 20px
		.cv
			cursor pointer
			margin-left 8px
			text-decoration none
			color black
			&:hover
				text-decoration underline
