@import 'fonts.styl'

@keyframes scale {
	0% { transform: scale(0.5, 0.5); }
	100% { transform: scale(1, 1); }
}

html, body
	margin 0
	padding 0
	background-color rgb(234, 189, 112)
	// cursor none

a
	color black

.content-block
	width 1280px
	height 1024px
	margin 0 auto
	// border 1px solid black
	position relative
	box-sizing border-box

.logo
	display block
	position absolute
	&.main
		bottom 40px
		left 40px
	&.s1
		right 40px
		bottom 40px
	&.s2
		top 40px
		left 40px

.menu
	display block
	position absolute
	.numb
		position absolute
		top 0
		left 0
		right 0
		bottom 0
		margin auto
	&.one
		top 40px
		left 410px
		.numb
			animation scale 1.4s infinite alternate
	&.two
		top 40px
		right 40px
		.numb
			animation scale 1.6s infinite alternate
	&.three
		top 446px
		left 500px
		.numb
			animation scale 1.8s infinite alternate
		.round
			width 98%
	&.four
		.numb
			animation scale 2s infinite alternate
		left 40px
		top 265px

.back
	display block
	width 180px
	height 180px
	position absolute
	bottom 40px
	right 40px
	z-index 9999
	background-size contain
	background-position center
	background-repeat no-repeat
	background-image url('../img/design/menu.svg')
	&:hover
		background-image url('../img/design/menu_select.svg')

.swiper-container
	width 100%
	height 800px
	top 0
	left 0
	right 0
	bottom 0
	margin auto
	position absolute
	// border 1px solid green
	.swiper-button-prev
		margin-left 40px
	.swiper-button-next
		margin-right 40px
	.swiper-slide
		width 100%
		height @height
		background-size contain
		background-position top
		background-repeat no-repeat

video
	width 100%
	position absolute
	top 0
	// left 0
	// right 0
	// bottom 0
	// margin auto