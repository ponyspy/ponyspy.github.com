@keyframes scroll {
	0% {
		transform translate(0, 0)
	}
	100% {
		transform translate(-100%, 0)
	}
}

html, body
	margin 0
	padding 0
	height 100%

.dot
	position absolute
	width 20px
	height 20px
	border-radius 100%
	background-color black

.content-block
	overflow hidden
	.block
		margin-top 20px
		max-width 600px
		box-sizing border-box
		&.left
			float left
			margin-left 20px
			margin-right 20px
		&.right
			margin-left 20px
			margin-right 20px
			float right
		img
			width 100%
			max-width 600px
			display block
		.marquee
			white-space nowrap
			width 100%
			position absoulte
			overflow hidden
			color black
			margin-top 5px
			margin-bottom 5px
			span
				display inline-block
				padding-left 100%
				animation scroll 10s infinite linear

.footer-block
	width 100%
	position fixed
	bottom 20px
	overflow hidden
	.left
		float left
		margin-left 20px
		.counter
			cursor default
	.right
		float right
		margin-right 20px
		.cv
			cursor pointer
			margin-left 8px
			text-decoration none
			color black
			&:hover
				text-decoration underline