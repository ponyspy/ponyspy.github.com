@import 'fonts.styl'

html, body
	margin 0
	padding 0

a
	color black
	text-decoration none
	&:hover
		text-decoration underline

.title-block
	width 1024px
	margin 0px auto
	overflow hidden
	padding-left 20px
	padding-right 20px
	box-sizing border-box
	margin-top 40px
	.logo
		width 27%
		display block
		float left
	.title-desc
		float left
		width 73%
		font 10pt/12pt 'Helvetica'
		box-sizing border-box
		padding-left 60px
		color rgb(156, 157, 159)

.gallery-block
	width 100%
	background-color rgb(235, 235, 236)
	margin-top 40px
	.swiper-container
		padding-left 20px
		padding-right 20px
		width 1024px
		height 580px
		margin 0 auto
		box-sizing border-box
		.swiper-slide
			width 100%
			height @height
			background-size cover
			background-position top
			background-repeat no-repeat

.content-block
	width 1024px
	margin 0px auto
	box-sizing border-box
	overflow hidden
	padding-left 20px
	padding-right 20px
	margin-top 40px
	.content-desc
		float left
		width 75%
		padding-right 60px
		box-sizing border-box
		.desc-title
			font 18pt/20pt 'Helvetica'
		.desc-quote
			font 10pt/20pt 'Helvetica'
			font-style italic
		.desc-second
			font 12pt/18pt 'Helvetica'
			padding-top 20px
			padding-bottom 20px
		.desc-body
			font 12pt/18pt 'Helvetica'
	.content-booking
		font 10pt/18pt 'Helvetica'
		float left
		width 25%
		.booking
			width 65%
			overflow hidden
			.title
				float left
			.content
				float right
		.booking-link
			display block
			margin-top 10px

.footer-block
	width 1024px
	margin 0px auto
	margin-top 20px
	margin-bottom 20px
	padding-left 20px
	padding-right 20px
	box-sizing border-box
	.inner
		padding-top 20px
		width 100%
		border-top 1px solid black
		text-align center
		a
			display inline-block
			width 38px
			height @width
			border 1px solid lightgrey
			border-radius 6px
			position relative
			margin-right 5px
			padding-left 5px
			box-sizing border-box
			&:last-child
				margin-right 0
			img
				position absolute
				top 0; left 0; right 0; bottom 0
				margin auto
				display block
				width 50%
			&.fb img
				width 40%