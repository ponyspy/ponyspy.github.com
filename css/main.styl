.banner_block
	width 100%
	height 400px
	position fixed
	top 45px
	z-index 0
	user-select none
	.banner_dotes
		position absolute
		display inline-block
		right 20px
		bottom 20px
		font-size 26px
		color white
		z-index 99
		.banner_dot
			cursor pointer
			display inline-block
			&:hover:after
			&.active:after
				content '●'
			&:after
				content '○'
	.banner_events
		position relative
		width 100%
		height 400px
		overflow hidden
		.banner_event
			width 100%
			height 400px
			position relative
			background-size cover
			background-position top
			background-attachment fixed
			.banner_title
				top 40px
				left 20px
				position absolute
				display inline-block
				max-width 380px
				background-color black
				color white
				text-decoration none
				padding 10px
				font 30pt/32pt 'Pragmatica'
				font-weight bold
				&:hover
					background-color white
					color black

.areas_block
	position relative
	top 400px
	background-color white
	padding-bottom 80px
	.areas_scroll
		overflow hidden
		width 100%
		height 220px
		background-color black
		overflow hidden
		.areas_scroll_outer
			// width 1240px
			// margin 0 auto
			overflow-x scroll
			-webkit-overflow-scrolling touch
			height 240px
			.areas_scroll_inner
				white-space nowrap
				display inline-block
				vertical-align top
				padding-left 10px
				padding-right 10px
				padding-top 5px
				box-sizing border-box
				.scroll_item
					display inline-block
					width 300px
					height 200px
					background-color black
					border 1px dotted white
					box-sizing border-box
					margin 10px
					position relative
					cursor pointer
					background-size cover
					background-repeat no-repeat
					background-position center
					filter grayscale(100%)
					.item_title
						position absolute
						top 20px
						left 0
						background-color black
						color white
						padding 5px
						display inline-block
					&:hover .item_title
						background-color white
						color black
	.area_item
		position relative
		z-index 999
		overflow hidden
		background-color white
		padding-top 65px
		box-sizing border-box
		.area_title
			background-color black
			color white
			position absolute
			top 0
			width 100%
			height 28px
			z-index 999
			.area_title_inner
				max-width 1240px
				margin 0 auto
				padding-left 20px
				padding-right 20px
				position relative
				.title_item
					position absolute
					cursor pointer
					padding-top 5px
					padding-bottom 5px
					box-sizing border-box
					&:hover
						color lightgrey
					&.name
						width 800px
						// background-color rgb(32, 118, 189)
						left 0
						margin-left 20px
					&.news
						// background-color pink
						right 0
						width 440px

.area_content
	overflow hidden
	position relative
	.area_content_inner
		// background-color green
		max-width 1240px
		margin 0 auto
		padding-left 20px
		padding-right 20px
		overflow hidden
		position relative

		.area_events
			width 100%
			padding-right 440px
			box-sizing border-box
			position relative
			.event_item
				padding-bottom 40px
				padding-right 20px
				box-sizing border-box
				// background-color maroon
				.event_title
					font 34pt/36pt 'Pragmatica'
					display block
					text-decoration none
					color black
					// max-width 680px
					border-bottom 1px solid white
					padding-bottom 5px
					&:hover
						border-bottom 1px dotted black
						color grey
				.event_date
					padding-top 5px

		.area_news
			width 440px
			box-sizing border-box
			top 0
			right 0
			position absolute
			padding-right 20px
			.news_item
				padding-bottom 20px
				// background-color rgb(41, 144, 231)
				.news_date
					margin-bottom 5px
					font-weight bold